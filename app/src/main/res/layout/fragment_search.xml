<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4D4D4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Search">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/appcolor"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="155dp"
        android:text="Search"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="80dp"
        app:boxCornerRadiusBottomEnd="50dp"
        app:boxCornerRadiusBottomStart="50dp"
        app:boxCornerRadiusTopEnd="50dp"
        app:boxBackgroundColor="#D6C1C1"
        app:boxCornerRadiusTopStart="50dp"
        app:boxStrokeColor="#F8F3F3"
        app:boxStrokeWidth="2dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="Search ex:Men's Shirt"
            android:textSize="15dp" />


    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/searchicon"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="102dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/searchh"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/searchfilter"
        android:scaleType="centerCrop"
        android:layout_marginLeft="312dp"
        android:layout_marginTop="85dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Brands"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="160dp"
        android:textColor="@color/appcolor"
        android:fontFamily="serif"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brandrecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp" />


    </FrameLayout>

</ScrollView>