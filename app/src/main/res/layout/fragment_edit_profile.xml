<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/appcolor"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="140dp"
        android:text="Your Profile"/>

    <TextView
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:text="Don't worry, only you can see your personal data. No one else will be able to see it."
        android:textColor="@color/appcolor"
        android:textSize="14dp" />


    <!--<com.google.android.material.card.MaterialCardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="100dp"

        >-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userimage"
            android:layout_width="140dp"
            android:scaleType="centerCrop"
            android:layout_height="140dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="136dp"
            android:src="@drawable/ic_launcher_background"/>



    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="244dp"
        app:cardCornerRadius="100dp"
        app:cardBackgroundColor="@color/appcolor"
        android:layout_marginLeft="265dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/editicon"/>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="302dp"
        android:layout_height="60dp"
        android:layout_marginTop="310dp"
        android:textColorHint="#5C3A21"
        android:layout_marginLeft="30dp"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        app:boxStrokeColor="#5C3A21"
        app:hintTextColor="#5C3A21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profilename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Name"
            android:textColor="#5C3A21"
            android:textSize="15dp" />

        <!--android:cursorVisible="true"
        android:textCursorDrawable="@color/your_cursor_color"-->

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="302dp"
        android:layout_height="60dp"
        android:layout_marginTop="394dp"
        app:boxCornerRadiusBottomEnd="30dp"
        app:hintTextColor="#5C3A21"
        android:layout_marginLeft="30dp"
        android:textColorHint="#5C3A21"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        app:boxStrokeColor="#5C3A21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email id"
            android:textSize="15dp"
            android:textColor="#5C3A21" />

        <!--android:cursorVisible="true"
        android:textCursorDrawable="@color/your_cursor_color"-->

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="302dp"
        android:layout_height="60dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="30dp"
        android:textColorHint="#5C3A21"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        app:boxStrokeColor="#5C3A21"
        app:hintTextColor="#5C3A21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:textColor="#5C3A21"
            android:textSize="15dp" />

        <!--android:cursorVisible="true"
        android:textCursorDrawable="@color/your_cursor_color"-->

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/completeprofile"
        android:layout_width="267dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="560dp"
        android:layout_marginRight="40dp"
        app:cardBackgroundColor="#5B3822"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Complete Profile"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </com.google.android.material.card.MaterialCardView>



</FrameLayout>