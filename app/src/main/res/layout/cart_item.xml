<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/cartimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cartprodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand Name"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/appcolor"
            />
        <TextView
            android:id="@+id/cartname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/appcolor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cartprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/appcolor"
                android:textStyle="bold"
                android:textSize="14dp"

                android:text="293"/>
            <TextView
                android:id="@+id/cartdisprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#8A8785"
                android:layout_marginLeft="10dp"
                android:foreground="@drawable/line_background"
                android:textSize="14dp"
                android:text="293"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/removeprod"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#DFC2AC"
            app:strokeColor="@color/appcolor"
            android:layout_marginRight="10dp"
            android:layout_height="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:text="Remove"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>